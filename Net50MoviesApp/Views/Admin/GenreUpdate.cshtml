@model AdminEditGenreViewModel
<h1>Edit Genre</h1>

<form asp-controller="Admin" asp-action="GenreUpdate" method="post">
    <div class="row">
        <div class="col-md-3">

            <input type="hidden" name="GenreId" value="@Model.GenreId">
            <div class="mb-3">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" class="form-control" value="@Model.Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <button type="submit" class="btn-btn-success">Submit</button>
        </div>
        <div class="col-md-9">
            <table class="table table-hover table-striped table-bordered">
                <thead>
                    <tr>
                        <th scope="col">Delete</th>
                        <th scope="col">#</th>
                        <th scope="col">Image</th>
                        <th scope="col">Title</th>
                        <th scope="col">Year</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var mov in Model.Movies)
                    {
                        <tr>
                            <th style="width:15px;">
                                <input type="checkbox" name="movieId"  value="@mov.MovieId">
                            </th>
                            <th style="width:30px;" scope="row">@mov.MovieId</th>
                            <td style="width:250px;"><img src="~/img/@mov.ImageUrl" width="240" alt="@mov.Title" /></td>
                            <td style="">@mov.Title</td>
                            <td style="">@mov.Year</td>

                            <td style="width:200px;">
                                <a href="/Admin/MovieUpdate/@mov.MovieId" class="btn btn-primary btn-sm">Update</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</form>