@model AdminMoviesViewModel
<h1>Admin Movie List</h1>

<table class="table table-hover table-striped table-bordered">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Image</th>
            <th scope="col">Title</th>
            <th scope="col">Year</th>
            <th scope="col">Genres</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var mov in Model.Movies)
        {
            <tr>
                <th style="width:30px;" scope="row">@mov.MovieId</th>
                <td style="width:175px;"><img src="~/img/@mov.ImageUrl" width="150" alt="@mov.Title" /></td>
                <td style="">@mov.Title</td>
                <td style="">@mov.Year</td>
                <td style="width:150px;">
                    <ul>
                        @foreach (var genre in mov.Genres)
                        {
                            <li>@genre.Name</li>
                        }
                    </ul>
                </td>
                <td style="width:200px;">
                    <a href="/Admin/MovieUpdate/@mov.MovieId" class="btn btn-primary btn-sm">Update</a>
                    <form action="/Admin/MovieDelete" method="post" style="display:inline;">
                        <input type="hidden" name="movieId" value="@mov.MovieId">
                        <button type="Submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>

        }

    </tbody>
</table>