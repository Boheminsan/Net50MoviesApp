@model Movie
@if (TempData["Message"] != null)
{
    @section message 
        {
        @await Html.PartialAsync("_message", (String)TempData["Message"])
        }
}
<div class="card">
    <div class="row">
        <div class="col-md-3">
            <img src="/img/@Model.ImageUrl" class="card-img" alt="@Model.Title">
        </div>
        <div class="col-md-9">
            <div class="card-body">
                <h5 class="card-title">@Model.Title</h5>
                <p class="card-text">@Html.Raw(Model.Description)</p>
                @*<p class="card-text">@Model.Director</p>*@
                @*<p class="card-text">
                    <ul>
                        @foreach (var item in Model.Cast)
                        {
            <li>@item</li>}
                    </ul>
                </p>*@
            </div>
        </div>
    </div>
</div>
