@model Movie
<h1>Edit Movie</h1>

<form asp-controller="Movies" asp-action="Edit" method="post">
    <div class="container">
        <input type="hidden" name="MovieId" value="@Model.MovieId">
        <div class="mb-3">
            <label asp-for="Title">Title</label>
            <input asp-for="Title" class="form-control" value="@Model.Title">
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Description">Description</label>
            <textarea asp-for="Description" rows="10" cols="30" class="form-control">@Model.Description</textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Director">Director</label>
            <input asp-for="Director" class="form-control" value="@Model.Director">
            <span asp-validation-for="Director" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="ImageUrl">ImageUrl</label>
            <input asp-for="ImageUrl" class="form-control" value="@Model.ImageUrl">
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Year">Year</label>
            <input asp-for="Year" class="form-control" value="@Model.Year">
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="GenreId">GenreId</label>
            <select asp-for="GenreId" asp-items="@ViewBag.Genres" class="form-select">
                <option value="null" disabled>Seçiniz</option>
            </select>
            @*<input asp-for="GenreId" class="form-control" value="@Model.GenreId">*@
            <span asp-validation-for="GenreId" class="text-danger"></span>
        </div>
        <button class="btn btn-info" type="submit">Kaydet</button>
    </div>
</form>
