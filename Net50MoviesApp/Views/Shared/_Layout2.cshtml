
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="/css/Style.css" rel="stylesheet" />
    <link href="/packages/bootstrap5b1/css/bootstrap.min.css" rel="stylesheet" />

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-success">
        <div class="container">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <a class="navbar-brand" href="#">Navbar</a>
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link active" aria-current="page" href="/Movies/List">Movies</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/About">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Movies/Index1">Index1</a>
                    </li>
                </ul>
            </div>

        </div>
    </nav>
    @RenderSection("header", false)

    <div class="container mt-4">
        @if (IsSectionDefined("menu"))
        {
            <div class="row">
                <div class="col-md-3">
                    @RenderSection("_menu", false)
                </div>
                <div class="col-md-9">
                    @RenderBody()
                </div>

            </div>
        }
        else
        {
            <div class="row">
                <div class="col-md-12">
                    @RenderBody()
                </div>
            </div>
        }

    </div>

    <script src="/js/jquery-3.5.1.min.js"></script>
    <script src="/packages/bootstrap5b1/js/bootstrap.js"></script>
    @RenderSection("scripts", false)
</body>
</html>
